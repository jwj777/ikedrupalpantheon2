#}

{% macro render_menu(items, level) %}
  <ul class="{{ level == 0 ? 'footer-menu' : 'footer-submenu' }}">
    {% for item in items %}
      <li class="{{ item.below is not empty ? 'menu-parent' : 'menu-child' }} {{ item.in_active_trail ? 'active' }}">
        {% if item.below is not empty %}
          <span class="menu-label label-small">{{ item.title }}</span>
          {{ _self.render_menu(item.below, level + 1) }}
        {% else %}
          <a href="{{ item.url.toString() }}">{{ item.title }}</a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}

