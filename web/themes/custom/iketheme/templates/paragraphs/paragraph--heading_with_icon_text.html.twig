
{%
  set classes = [
    'content-wrapper',
    'flex-container',
  ]
%}


<div class="paragraph--type--heading-with-icon-text">
  <div class="paragraph-inner">

    {# {{ content }} #}

    <div class="field-image">{{ content.field_image }}</div>

    <div class="text-container">

      <div class="icon-heading">
        <div class="field-image">{{ content.field_card_icon }}</div>
        <h3 class="field-text heading-medium">{{ content.field_heading_3|render|striptags|raw }}</h3>
      </div>

      <div class="field-text">{{ content.field_body }}</div>

    </div>


  </div>
</div>
