
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    <div class="paragraph-inner">
      {% block content %}
        <h2 class="heading-medium">{{ content.field_heading_3 }}</h2>
        <p class="body-medium">{{ content.field_body }}</p>
        {{ content.field_link_reference }}
      {% endblock %}
    </div>
  </div>
{% endblock paragraph %}
